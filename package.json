{
  "name": "localbeam",
  "version": "0.1.1",
  "description": "Lightweight local network peer discovery and data transfer library using WebRTC + Bonjour.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./server": {
      "import": "./dist/server/index.js",
      "require": "./dist/server/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsc"
  },
  "dependencies": {
    "bonjour": "^3.5.0",
    "chalk": "^5.3.0",
    "cors": "^2.8.5",
    "eventemitter3": "^5.0.1",
    "express": "^5.1.0",
    "simple-peer": "^9.11.1",
    "wrtc": "^0.4.7",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/bonjour": "^3.5.13",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/simple-peer": "^9.11.9",
    "@types/ws": "^8.18.1",
    "rimraf": "^6.0.0",
    "typescript": "^5.4.0"
  }
}
